extends layout

block content
  h1= title

  if (!user)
    a(href="/login") Login
    br
  a(href="/register") Register

  if (user)
    p You are currently logged in as #{user.username}
    a(href="/furniture") Take me to furniture
    br
    a(href="/logout") Logout

  p Welcome to #{title} Web Apps Lab
  button(type="button", class="btn btn-secondary", onclick="goFaster()") PressMe
  div#faster Increase the speed

  script.
    var mph = 20;
    var change = 1;

    function goFaster() {
      mph += change;
      change = change + 1;
      document.getElementById('faster').innerText = `MPH ${mph} with change ${change}`;
    }

  br
  a(href="http://localhost:3000/furniture") Search Results
